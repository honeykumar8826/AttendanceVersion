<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.attendnce.cloudanalogy.attendancev1">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cca"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cca"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".UserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".PhotoUpload"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".InternetUnavailable"
            android:theme="@style/AppThemeNoActionBar" />
        <activity android:name=".AttendanceList" />
        <activity
            android:name=".ApplyLeaveActivity"
            android:label=" "
            android:parentActivityName=".UserActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".HolidaysActivity" />
        <activity android:name=".LeaveStatusCheck" />
        <activity
            android:name=".LeaveTab"
            android:screenOrientation="portrait" />
        <activity android:name=".CompanyRule" />
        <activity android:name=".BirtdayAndAniversary" />
        <activity android:name=".MyTeam"
            android:screenOrientation="portrait" />
        <activity android:name=".AttendanceMyTeamMember" />
        <activity android:name=".TestingActivity"></activity>
    </application>

</manifest>