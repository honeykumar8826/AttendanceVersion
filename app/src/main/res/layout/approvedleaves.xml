<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            android:background="#ffff"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/name"
                    android:textColor="#000000"
                    android:layout_marginStart="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abhishek Singh"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_alignParentLeft="true"
                        android:textSize="12sp"
                        android:textColor="#A9A9A9"
                        android:text="Applied Date"/>
                    <TextView
                        android:id="@+id/sub"
                        android:textSize="12sp"
                        android:textColor="#A9A9A9"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="18dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:text="04/10/2018"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_alignParentLeft="true"
                        android:textSize="12sp"
                        android:textColor="#A9A9A9"
                        android:text="Subject"/>
                    <TextView
                        android:id="@+id/doj"
                        android:textSize="12sp"
                        android:textColor="#A9A9A9"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="18dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:text="Seek leave"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_alignParentLeft="true"
                        android:textColor="#A9A9A9"
                        android:layout_marginLeft="18dp"
                        android:layout_width="wrap_content"
                        android:text="From"/>
                    <TextView
                        android:id="@+id/c_month_leave"
                        android:textColor="#A9A9A9"                                                                 android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="18dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="04/10/2018"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#A9A9A9"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="18dp"
                        android:layout_width="wrap_content"
                        android:text="To"/>
                    <TextView
                        android:id="@+id/c_half_dayleave"
                        android:textColor="#A9A9A9"                                                                 android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="18dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="10/10/2018"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#A9A9A9"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="18dp"
                        android:layout_width="wrap_content"
                        android:text="HR Approval"/>
                    <TextView
                        android:id="@+id/hr"
                        android:textColor="#A9A9A9"                                                                 android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="18dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="YES"
                        />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>